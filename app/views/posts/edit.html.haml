.text-center
  = image_tag @post.image.variant(resize_to_limit: [500, 500])
.form-wrapper
  = form_with model: @post, local: true, html: { class: 'form-horizontal', multipart: true } do |f|
    .form-group
      = f.label :image
      = f.file_field :image

    .form-group.text-center
      = f.label :caption
      = f.text_field :caption

    .form-group.text-center
      = f.submit class: 'btn-success'

.text-center.edit-links
  = button_to "Delete Post",
    post_path(@post),
      method: :delete,
        class: "btn btn-danger"
  =link_to "Back", posts_path


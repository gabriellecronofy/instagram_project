.form-wrapper
  = form_with model: @post, local: true, html: { class: 'form-horizontal', multipart: true } do |f|
    .form-group
      = f.label :image
      = f.file_field :image

    .form-group.text-center
      = f.label :caption
      = f.text_field :caption

    .form-group.text-center
      = f.submit class: 'btn-success'

